{
  "name": "openwebuisimpledesktop",
  "productName": "OpenWebUISimpleDesktop",
  "version": "0.1.3",
  "description": "OpenWebUI-SimpleDesktop",
  "author": "N1kozor <barkattila@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist-macOS": "electron-builder --mac --x64 --arm64"
  },
  "build": {
    "files": [
      "main.js",
      "preload.js",
      "modal.html",
      "modal.js",
      "modal-preload.js",
      "renderer.js",
      "index.html",
      "styles/**/*",
      "assets/**/*"
    ],
    "appId": "com.openwebuisimpledesktop.desktop",
    "productName": "OpenwebuiSimpleDesktop",
    "icon": "assets/ico.icns",
    "win": {
      "icon": "assets/ico.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "assets/ico.png",
      "target": ["AppImage", "deb", "rpm", "pacman", "snap", "apk"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "icon": "assets/ico.icns",
      "category": "public.app-category.productivity",
      "target": ["dmg"]
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": ">=35.1.5",
    "electron-builder": ">=26.0.12"
  }
}